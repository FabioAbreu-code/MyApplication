<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/textViewNomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Coca-Cola Zero 1l"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/textViewNomeFornecedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeProduto"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeProduto"
        tools:text="Coca-Cola" />

    <TextView
        android:id="@+id/textViewDescricaoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeFornecedor"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeFornecedor"
        tools:text="Proteger da luz solar. Preservar de odores agressivos. Conservar em lugar limpo, fresco e seco." />

</androidx.constraintlayout.widget.ConstraintLayout>