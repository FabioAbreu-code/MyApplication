<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuPrincipalFragment">

    <fragment
        android:id="@+id/MenuPrincipalFragment"
        android:name="com.example.myapplication.MenuPrincipalFragment"
        android:label="@string/menu_principal_fragment_label"
        tools:layout="@layout/fragment_menu_principal">

        <action
            android:id="@+id/action_MenuPrincipalFragment_to_SobreFragment"
            app:destination="@id/SobreFragment" />
        <action
            android:id="@+id/action_MenuPrincipalFragment_to_ListaProdutosFragment"
            app:destination="@id/ListaStockFragment" />
    </fragment>
    <fragment
        android:id="@+id/SobreFragment"
        android:name="com.example.myapplication.SobreFragment"
        android:label="@string/sobre_fragment_label"
        tools:layout="@layout/fragment_sobre">

        <action
            android:id="@+id/action_SobreFragment_to_MenuPrincipalFragment"
            app:destination="@id/MenuPrincipalFragment" />
    </fragment>
    <fragment
        android:id="@+id/ListaStockFragment"
        android:name="com.example.myapplication.ListaStockFragment"
        android:label="@string/lista_produtos_label"
        tools:layout="@layout/fragment_lista_stock">
        <action
            android:id="@+id/action_ListaStockFragment_to_MenuPrincipalFragment"
            app:destination="@id/MenuPrincipalFragment" />
        <action
            android:id="@+id/action_ListaStockFragment_to_novoProdutoFragment"
            app:destination="@id/novoProdutoFragment" />
    </fragment>
    <fragment
        android:id="@+id/novoProdutoFragment"
        android:name="com.example.myapplication.NovoProdutoFragment"
        android:label="@string/novo_produto_label"
        tools:layout="@layout/fragment_novo_produto">
        <action
            android:id="@+id/action_novoProdutoFragment_to_ListaStockFragment"
            app:destination="@id/ListaStockFragment" />

    </fragment>
</navigation>